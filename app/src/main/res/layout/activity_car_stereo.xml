<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CarStereo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#ffe3ff45"
            android:measureWithLargestChild="false"
            android:id="@+id/radio"
            android:layout_weight="2"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <ToggleButton
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="AM/FM button"
                    android:id="@+id/AMFM"
                    android:textOff="AM"
                    android:textOn="FM"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1"
                    android:id="@+id/preset1" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2"
                    android:id="@+id/preset2" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="3"
                    android:id="@+id/preset3" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="4"
                    android:id="@+id/preset4" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="5"
                    android:id="@+id/preset5" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="6"
                    android:id="@+id/preset6" />

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Power"
                    android:id="@+id/power"
                    android:textOn="On"
                    android:textOff="Off"
                    android:singleLine="false"
                    android:layout_marginLeft="240dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:rotation="270"
                    android:id="@+id/tuner"
                    android:splitTrack="false"
                    android:mirrorForRtl="false"
                    android:nestedScrollingEnabled="false"
                    android:longClickable="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="000.00"
                    android:id="@+id/radioDisplay"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:background="#fffc9bff"
                    android:editable="false"
                    android:elegantTextHeight="false"
                    android:textSize="200dp"
                    android:textColor="#ff405fff"
                    android:singleLine="false"
                    android:layout_marginLeft="-40dp"
                    android:layout_weight="0.25"
                    android:layout_marginBottom="10dp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff29fdff"
            android:layout_weight="2"
            android:id="@+id/cd"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="612dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/cdSlot"
                        android:layout_gravity="center_horizontal"
                        android:background="#945f5f5f"
                        android:text="CD"
                        android:textSize="100dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="50dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom">

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/pause"
                            android:src="@mipmap/pause"
                            android:background="#ff000000"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/stop"
                            android:src="@mipmap/stop"
                            android:background="#ff000000"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/eject"
                            android:src="@mipmap/eject"
                            android:background="#ff000000"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/fastForward"
                            android:src="@mipmap/ff"
                            android:background="#ff000000"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/repeat"
                            android:src="@mipmap/repeat"
                            android:background="#ff000000" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="267dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:text="99"
                        android:id="@+id/volume"
                        android:textSize="100dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/volumeDial" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
